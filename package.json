{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run serve --ignore docs --stream --parallel",
    "dev:docs": "lerna run dev --scope wevue.org --stream",
    "lint": "lerna run lint --scope we-vue --stream",
    "test": "lerna run test --scope we-vue --stream",
    "test:watch": "lerna run test:watch --scope we-vue --stream",
    "test:coverage": "lerna run test:coverage --scope we-vue --stream",
    "release": "yarn --pure-lockfile && node scripts/release.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "commitizen": "^3.0.2",
    "concurrently": "^4.0.1",
    "conventional-changelog": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "inquirer": "^6.0.0",
    "lerna": "^3.7.1",
    "lint-staged": "^8.0.0",
    "prettier": "^1.14.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.0",
    "semver": "^5.3.0",
    "shelljs": "^0.8.0",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
